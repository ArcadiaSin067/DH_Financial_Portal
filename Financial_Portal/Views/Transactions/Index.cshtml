@model IEnumerable<Financial_Portal.Models.Transaction>

@{
    ViewBag.Title = "Index";
}

<div class="module span10">
    <div class="module-head">
        <h3>Transaction History</h3>
    </div>
    <div class="dataTables_wrapper" style="padding:15px 0; margin-right:15px">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered display dataTable module-body" id="transactDT" style="padding:0;border:1px solid #ccc">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Account.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BucketItem.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TransactionType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Owner.FullName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Memo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Account.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BucketItem.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransactionType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Owner.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Memo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Created)
                        </td>
                        <td>
                            <ul>
                                <li>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </li>
                                <li>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                                </li>
                                <li>
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section scripts{
    <script>
        $('#transactDT').dataTable();
    </script>
}
