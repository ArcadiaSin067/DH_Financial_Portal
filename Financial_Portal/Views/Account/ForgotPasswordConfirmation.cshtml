@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_LoginShared.cshtml";
}

<div class="module module-login span4 offset4">
    <div class="module-head">
        <h3>@ViewBag.Title</h3>
    </div>
    <div class="module-body">
        <div class="control-group">
            <div class="row-fluid">
                <span style="width:85%">
                    Message sent, please keep an eye on your Email for a
                    reset password message from "Big_Bank Admin"!
                </span>
            </div>
        </div>
    </div>
    <div class="module-foot">
        <div class="control-group">
            <div class="controls clearfix">
                <img src="~/Images/bigpig.png" style="height:25px; width:25px; margin-left:0" class="pull-right span1" />
            </div>
        </div>
    </div>
</div>
