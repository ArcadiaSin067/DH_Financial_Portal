@using Financial_Portal.Helpers
@using Financial_Portal.Models
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Big_Bank";
    var db = new ApplicationDbContext();
    var user = db.Users.Find(User.Identity.GetUserId());
    var eConfirmed = user.EmailConfirmed;
    var avatar = user.AvatarPath;
    var name = user.FullName;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <style>
        .btn-navbar {
            background-image: linear-gradient(to bottom, #1d1d2d, #2f2f3f) !important;
        }

            .btn-navbar:hover {
                background-image: linear-gradient(to bottom, #1d2d4d, #2f3f5f) !important;
            }

        .btn:hover {
            background-position: 0 0 !important;
        }

        .dropIcon {
            margin-top: 2px !important;
            padding-right: 5px !important;
        }
    </style>

    <!-- Style sheets -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-responsive.min.css" rel="stylesheet" />
    <link href="~/Content/theme.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <link type="text/css" href='//fonts.googleapis.com/css?family=Open+Sans:400italic,600italic,400,600'
          rel='stylesheet'>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".navbar-inverse-collapse" style="margin-top:12px">
                    <i class="menu-icon icon-align-justify"></i>
                </a><a class="brand">Big_Bank </a>
                <img src="~/Images/bigpig.png" style="position:absolute; top:5px; left:130px; max-height:75px; max-width:75px" />
                <div class="nav-collapse collapse navbar-inverse-collapse">
                    <ul class="nav nav-icons">
                        <li><a><i class="menu-icon icon-user" style="padding-right:5px"></i>Welcome, @name!</a></li>
                    </ul>
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                Dropdown
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="#">Item No. 1</a></li>
                                <li><a href="#">Don't Click</a></li>
                                <li class="divider"></li>
                                <li class="nav-header">Example Header</li>
                                <li><a href="#">A Separated link</a></li>
                            </ul>
                        </li>
                        <li class="nav-user dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@avatar" class="nav-avatar" />
                                <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><a href="/Manage/EditProfile">Edit Profile</a></li>
                                <li><a href="/Manage/Index">Account Settings</a></li>
                                <li class="divider"></li>
                                @using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new
                                { id = "logoutForm", @class = "navbar-right" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <li>
                                        <a href="javascript:$('#logoutForm').submit()">
                                            <i class="menu-icon icon-share-alt"></i><span style="padding-left:5px">Logout</span>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </li>
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <!-- /navbar -->
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <div class="span3">
                    <div class="sidebar">
                        <ul class="widget widget-menu unstyled">
                            <li class="active">
                                <a href="/Home/Index">
                                    <i class="menu-icon icon-th-list"></i>Dashboard
                                </a>
                            </li>
                            <li>
                                <a class="collapsed" data-toggle="collapse" href="#toggleHome">
                                    <i class="menu-icon icon-home">
                                    </i><i class="icon-chevron-down pull-right"></i><i class="icon-chevron-up pull-right">
                                    </i>Household
                                </a>
                                <ul id="toggleHome" class="collapse unstyled">
                                    @if (user.HouseholdId == null)
                                    {
                                        <li><a href="/Households/Create"><i class="icon-plus-sign dropIcon"></i>Create </a></li>
                                        <li><a href="other-login.html"><i class="icon-plus-sign dropIcon"></i>Join </a></li>
                                    }
                                    else
                                    {
                                        var houseNum = $"/Households/Details/{user.HouseholdId}";
                                        <li><a href=@houseNum><i class="icon-info-sign dropIcon"></i>Current </a></li>
                                        if (User.IsInRole("Head_Of_House") || User.IsInRole("Admin"))
                                        {
                                            var headNum = $"/Households/Edit/{user.HouseholdId}";
                                            <li><a href=@headNum><i class="icon-edit dropIcon"></i>Edit </a></li>
                                        }
                                    }
                                    <li><a href="/Households/Index"><i class="icon-list-alt dropIcon"></i>Index </a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="message.html">
                                    <i class="menu-icon icon-inbox"></i>Inbox <b class="label green pull-right">
                                        11
                                    </b>
                                </a>
                            </li>
                            <li>
                                <a href="task.html">
                                    <i class="menu-icon icon-tasks"></i>Tasks <b class="label orange pull-right">
                                        19
                                    </b>
                                </a>
                            </li>
                            <li><a href="ui-button-icon.html"><i class="menu-icon icon-bold"></i> Buttons </a></li>
                            <li><a href="ui-typography.html"><i class="menu-icon icon-book"></i>Typography </a></li>
                            <li><a href="form.html"><i class="menu-icon icon-paste"></i>Forms </a></li>
                            <li><a href="table.html"><i class="menu-icon icon-table"></i>Tables </a></li>
                            <li><a href="charts.html"><i class="menu-icon icon-bar-chart"></i>Charts </a></li>
                        </ul>
                        <ul class="widget widget-menu unstyled">
                            <li>
                                <a class="collapsed" data-toggle="collapse" href="#togglePages">
                                    <i class="menu-icon icon-cog">
                                    </i><i class="icon-chevron-down pull-right"></i><i class="icon-chevron-up pull-right">
                                    </i>More Pages
                                </a>
                                <ul id="togglePages" class="collapse unstyled">
                                    <li><a href="other-login.html"><i class="icon-inbox dropIcon"></i>Login </a></li>
                                    <li><a href="other-user-profile.html"><i class="icon-inbox dropIcon"></i>Profile </a></li>
                                    <li><a href="other-user-listing.html"><i class="icon-inbox dropIcon"></i>All Users </a></li>
                                </ul>
                            </li>
                            <li>
                                <a href="javascript:$('#logoutForm').submit()">
                                    <i class="menu-icon icon-share-alt"></i>Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="span9">
                    <div class="content" style="padding-top:15px;padding-left:30px">
                        @if (eConfirmed == true && User.Identity.IsAuthenticated)
                        {
                            @RenderBody()
                        }
                        else
                        {
                            { Response.Redirect("~/Account/NewlyRegistered"); }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        <div class="container">
            <p><strong>&copy; @DateTime.Now.Year - Big_Bank</strong> by Daniel Hebbard</p>
        </div>
    </div>

    <!-- Core Scripts -->
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.10.1.custom.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!--  Sweet Alert2 -->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@9"></script>
    <!-- Morris Charts -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <!-- JQuery Datatables -->
    <script src="~/Scripts/jquery.dataTables.js"></script>
    <!-- Custom Scripts -->
    <script src="~/Scripts/common.js"></script>
    
    @RenderSection("scripts", required: false)

    <script>
        var message1 = '@TempData["Message1"]';
        var message2 = '@TempData["Message2"]';
        var message3 = '@TempData["Message3"]';
        const finalMessage = message1 + '<br />' + message2 + '<br />' + message3;
        if (message1 != '' || message2 != '' || message3 != '') {
            Swal.fire({
                icon: 'error',
                title: 'Oops!',
                html: finalMessage 
            })
        };

    </script>

</body>
</html>